mk_add_options MOZ_OBJDIR=/home/ben/mozilla/builds/android-r
mk_add_options AUTOCLOBBER=1

# Build Firefox for Android:
ac_add_options --enable-application=mobile/android
ac_add_options --target=arm-linux-androideabi

# With the following Android SDK and NDK:
ac_add_options --with-android-sdk="/home/ben/.mozbuild/android-sdk-linux"
ac_add_options --with-android-ndk="/home/ben/.mozbuild/android-ndk-r11b"

