# export PKG_CONFIG_LIBDIR=/usr/lib/pkgconfig:/usr/share/pkgconfig:/usr/lib/i386-linux-gnu/pkgconfig
# ac_add_options --x-libraries=/usr/lib

# CC="gcc -m32 -march=pentiumpro"
# CXX="g++ -m32 -march=pentiumpro"
CC="gcc"
CXX="g++"
AR=ar

mk_add_options MOZ_OBJDIR=../build-firefox-i686-arm-sim
mk_add_options MOZ_MAKE_FLAGS="-j8 -s"

ac_add_options --enable-application=browser
ac_add_options --enable-signmar

ac_add_options --enable-debug

ac_add_options --target=i686-pc-linux
ac_add_options --enable-arm-simulator

# For NSS symbols
export MOZ_DEBUG_SYMBOLS=1

# Use ccache
ac_add_options --with-ccache=/usr/bin/ccache

# XX not building??
ac_add_options --disable-gstreamer

